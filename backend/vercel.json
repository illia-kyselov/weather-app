{
    "builds": [
        {
            "src": "backend/package.json",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/weather/(.*)",
            "dest": "/backend/weather/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/backend/$1"
        }
    ]
}
